{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "templates/**/*.hbs",
        "outDir": "dist"
      },
      {
        "include": "config/env/**/*.env",
        "outDir": "dist"
      }
    ]
  }
}
